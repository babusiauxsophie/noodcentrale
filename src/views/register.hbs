<link rel="stylesheet" href="css/components/register.css">
<link rel="stylesheet" href="css/styles.css">

<section class="section--register">
    <h2>Register</h2>
    {{>form-errors this}}
    <form method="post" action="/register">
        {{#each inputs}}
            {{>form-input this}}
        {{/each}}
        
        <div class="footer-container">
            <input class="function__button btn--warning" type="reset" class="btn" value="Clear">
            <input class="function__button" type="submit" class="btn" value="Register">
        </div>
    </form>
</section>

