</section>

<ul class="function--card__list">
{{#each operatorItems }}
  <li class="function__item {{#if (ifEven @key) }}function__item--even{{/if}}">
    <div class="function__item--first">
          <p class="function__name function__name--gap">
            {{ firstname }} {{ lastname }}
          </p>
          
          <p class="function__email">
            {{ email }}
          </p>
    </div>
          <a class="function__button function__button--icon" href="operatoren/{{id}}">
            <img src="images/path.svg" alt="lookingglass">
          </a>   
  </li>
{{/each}}
</ul>
